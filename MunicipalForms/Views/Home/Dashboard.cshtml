@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <!-- Moved navbar to the top as a horizontal bar -->
    <nav class="top-navbar navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Dashboard">
                <img src="~/images/logo.png" alt="Logo" class="dashboard-logo" />
                Municipal Forms
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Report/Create"><i class="bi bi-clipboard-plus"></i> Report Issue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Events/Index"><i class="bi bi-calendar-event"></i> Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Service/Index"><i class="bi bi-gear"></i> Service Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link logout" href="/Account/Login"><i class="bi bi-box-arrow-right"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="dashboard-main">
        <header class="dashboard-header">
            <div class="dashboard-title">
                <h1>Welcome to Your Dashboard</h1>
            </div>
        </header>

        <section class="dashboard-cards">
            <div class="card">
                <img src="~/images/report.png" alt="Report" class="card-icon" />
                <h3>Submit Reports</h3>
                <p>Quickly report municipal issues and track your submissions.</p>
                <a href="/Report/Create" class="btn btn-primary">Go</a>
            </div>

            <div class="card">
                <img src="~/images/events.png" alt="Events" class="card-icon" />
                <h3>Community Events</h3>
                <p>See what’s happening around your municipality this week.</p>
                <a href="/Events/Index" class="btn btn-primary">View</a>
            </div>

            <div class="card">
                <img src="~/images/service.png" alt="Service Requests" class="card-icon" />
                <h3>Service Request Status</h3>
                <p>Track and view progress on your submitted municipal service requests.</p>
                <a href="/Service/Index" class="btn btn-primary">Open</a>
            </div>
        </section>
    </main>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
}