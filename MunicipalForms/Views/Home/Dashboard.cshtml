@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Municipal Forms</h2>
        </div>
        <nav class="nav-links">
            <a href="/Home/Dashboard" class="active"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a href="/Report/Create"><i class="bi bi-clipboard-plus"></i> Report Issue</a>
            <a href="/Events/Index"><i class="bi bi-calendar-event"></i> Events</a>
            <a href="/Updates/Index"><i class="bi bi-newspaper"></i> Updates</a>
            <a href="/Account/Login" class="logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </nav>
    </aside>

    <!-- Cards being on the dashboard page -->
    <main class="dashboard-main">
        <header class="dashboard-header">
            <header class="dashboard-header">
                <div class="dashboard-title">
                    <img src="~/images/logo.png" alt="Logo" class="dashboard-logo" />
                    <h1>Welcome to Your Dashboard</h1>
                </div>
            </header>
        </header>

        </header>

        <section class="dashboard-cards">
            <div class="card">
                <img src="~/images/report.png" alt="Report" class="card-icon" />
                <h3>Submit Reports</h3>
                <p>Quickly report municipal issues and track your submissions.</p>
                <a href="/Report/Create" class="btn btn-primary">Go</a>
            </div>

            <div class="card">
                <img src="~/images/events.png" alt="Events" class="card-icon" />
                <h3>Community Events</h3>
                <p>See what’s happening around your municipality this week.</p>
                <a href="/Events/Index" class="btn btn-primary">View</a>
            </div>

            <div class="card">
                <img src="~/images/updates.png" alt="Updates" class="card-icon" />
                <h3>City Updates</h3>
                <p>To be implemnted in PART 3 of POE.</p>
                <a href="/Updates/Index" class="btn btn-primary">Read</a>
            </div>
        </section>
    </main>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
}
