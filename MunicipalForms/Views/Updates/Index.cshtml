@{
    ViewData["Title"] = "Municipal Updates";
}
<h1>Part 3</h1>
<p class="intro">This will be implemented in part 3</p>

    <a href="/Home/Dashboard" class="back-home-btn">← Back to Dashboard</a>
</div>

@section Styles {
    <style>
        .updates-container {
            max-width: 900px;
            margin: 50px auto;
            background: #fdfdfd;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            font-family: "Segoe UI", sans-serif;
        }

            .updates-container h1 {
                text-align: center;
                color: #1e3a8a;
                font-weight: 700;
                margin-bottom: 10px;
            }

        .intro {
            text-align: center;
            color: #555;
            margin-bottom: 30px;
        }

        .updates-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .update-card {
            background: #f8fafc;
            padding: 20px;
            border-left: 6px solid #2563eb;
            border-radius: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .update-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            }

            .update-card h3 {
                color: #1e40af;
                margin-bottom: 8px;
            }

            .update-card p {
                color: #444;
                line-height: 1.6;
            }

        .back-home-btn {
            display: inline-block;
            margin-top: 30px;
            text-decoration: none;
            background-color: #2563eb;
            color: #fff;
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: 600;
            transition: background 0.2s ease;
        }

            .back-home-btn:hover {
                background-color: #1e3a8a;
            }
    </style>
}
